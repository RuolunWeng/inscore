/ITL/scene/* watch mouseDown (
	/ITL/scene/$self x "$sx" ,
	/ITL/scene/$self y "$sy" );

/ITL/scene/* watch mouseMove (
	/ITL/scene/$self x "$sx" ,
	/ITL/scene/$self y "$sy" );

/ITL/scene/* watch mouseUp (
	/ITL/scene/$self x "$sx" ,
	/ITL/scene/$self y "$sy" );

/ITL/scene/comment set txt "You can now edit the scene and move the objects using the mouse";
/ITL/scene/comment y 0.9;
