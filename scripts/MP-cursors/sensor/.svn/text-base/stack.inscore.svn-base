
/ITL/scene/signal/* del ;
/ITL/scene/signal/stack set "faust" "stack" ;
/ITL/scene/signal/stack size 200 ;
/ITL/scene/signal/stack alias "/accxyz" ;

/ITL/scene/signal/pitchcolor  0.0 ;
/ITL/scene/signal/rollcolor  0.60 ;
/ITL/scene/signal/yawcolor  0.30 ;
/ITL/scene/signal/transp  0.1 ;

/ITL/scene/signal/pitch set 0.0 "stack/0" "pitchcolor" 1.0 1.0 'transp' ;
/ITL/scene/signal/roll set 0.0 "stack/1" "rollcolor" 1.0 1.0 'transp' ;
/ITL/scene/signal/yaw set 0.0 "stack/2" "yawcolor" 1.0 1.0 'transp' ;
/ITL/scene/signal/stack volume 0.1;

/ITL/scene/signal/sig set "yaw" "roll" "pitch" ;
/ITL/scene/cursor set "graph" "sig" ;
/ITL/scene/cursor width 0.5 ;
/ITL/scene/cursor height 0.15 ;

/ITL/scene/cursor duration -2 4;

/ITL/scene/sync 'cursor' 'score' 'h';
/ITL/scene/cursor dy 0.05;
