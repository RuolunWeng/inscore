
/ITL/scene/signal/y size 200 ;
/ITL/scene/signal/ycolor  0.0 ;

/ITL/scene/signal/t size 200 ;
/ITL/scene/signal/tcolor  0.8 ;
/ITL/scene/signal/transp  0.7 ;

/ITL/scene/signal/envelope set 'y' 't' 'tcolor' 1.0 1.0 'transp';
/ITL/scene/signal/pitch set 'y' 0.03 'ycolor' 1.0 1.0 'transp';
/ITL/scene/signal/pitchenv set 'envelope' 'pitch';
/ITL/scene/cursor set "graph" "pitchenv" ;
/ITL/scene/cursor width 0.5 ;
/ITL/scene/cursor height 0.5 ;

/ITL/scene/cursor duration -3 8;

/ITL/scene/sync 'cursor' 'score' 'h';
/ITL/scene/cursor dy 0.05;
