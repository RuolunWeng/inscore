/ITL/scene/* del;
/ITL/scene/rect set rect 1.0 1.0;
/ITL/scene/rect color 254 212 76 150;
/ITL/scene/rect z 0.5;
/ITL/scene/text set txt "Click me";
/ITL/scene/text scale 1.5;
/ITL/scene/rect watch mouseDown (
		/ITL/scene/rect push,
		/ITL/$scene/$self color 76 254 212 150,
		/ITL/$scene/$self watch mouseDown (
				/ITL/$scene/$self scale 1.4,
				/ITL/$scene/$self color 212 76 254 150,
				/ITL/$scene/$self watch mouseDown (
						/ITL/$scene/$self angle 45.0,
						/ITL/$scene/$self color 212 254 76 150,
						/ITL/$scene/$self watch mouseDown (
								/ITL/$scene/$self color 254 212 76 150,
								/ITL/$scene/$self angle 0.0,
								/ITL/$scene/$self scale 1.0,
								/ITL/scene/rect pop ) ) ) );
/ITL/scene/comment set txt "This script illustrates nested 'watch' messages and infinite loops.";
/ITL/scene/comment scale 1.3;
/ITL/scene/comment y 0.9;
/ITL/scene/comment z 0.9;
