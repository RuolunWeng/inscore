/ITL/scene/_hleft set img "rsrc/left.png";
/ITL/scene/_hright set img "rsrc/right.png";
/ITL/scene/_hcenter set img "rsrc/center.png";
/ITL/scene/_h* x -0.9;
/ITL/scene/_hleft y -0.3;
/ITL/scene/_hright y 0.3;
/ITL/scene/_vtop set img "rsrc/left.png";
/ITL/scene/_vbottom set img "rsrc/right.png";
/ITL/scene/_vcenter set img "rsrc/center.png";
/ITL/scene/_v* y -0.9;
/ITL/scene/_v* angle 90.0;
/ITL/scene/_vtop x -0.3;
/ITL/scene/_vbottom x 0.3;
/ITL/scene/_[hv]* scale 0.7;
/ITL/scene/_hleft watch mouseDown (
		/ITL/$scene/[^_]* xorigin -1.0,
		/ITL/$scene/[^_]* x -0.6 );
/ITL/scene/_hright watch mouseDown (
		/ITL/$scene/[^_]* xorigin 1.0,
		/ITL/$scene/[^_]* x 0.6 );
/ITL/scene/_hcenter watch mouseDown (
		/ITL/$scene/[^_]* xorigin 0.0,
		/ITL/$scene/[^_]* x 0.0 );
/ITL/scene/_vtop watch mouseDown (
		/ITL/$scene/[^_]* yorigin -1.0,
		/ITL/$scene/[^_]* y -0.6 );
/ITL/scene/_vbottom watch mouseDown (
		/ITL/$scene/[^_]* yorigin 1.0,
		/ITL/$scene/[^_]* y 0.6 );
/ITL/scene/_vcenter watch mouseDown (
		/ITL/$scene/[^_]* yorigin 0.0,
		/ITL/$scene/[^_]* y 0.0 );
